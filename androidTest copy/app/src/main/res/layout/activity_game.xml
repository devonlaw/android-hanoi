<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".gameActivity">
    <ImageView
            android:id="@+id/sky"
            android:src="@drawable/skybackground"
            android:scaleType="centerCrop"
            android:contentDescription="@string/skyDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    <ImageView
            android:id="@+id/grass"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/grass"
            android:contentDescription="@string/grassDesc"
            android:layout_alignParentBottom="true"/>
    <TextView
            android:id="@+id/moveCount"
            android:text="@string/moveCount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/grey"
            android:textSize="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/block1"
            android:background="@color/grey"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_above="@id/grass"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"/>
    <View
            android:id="@+id/block2"
            android:background="@color/grey"
            android:layout_above="@id/block1"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="100dp"
            android:layout_height="30dp"/>
    <View
            android:id="@+id/block3"
            android:background="@color/grey"
            android:layout_above="@id/block2"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="80dp"
            android:layout_height="30dp"/>
    <View
            android:id="@+id/block4"
            android:background="@color/grey"
            android:layout_above="@id/block3"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
    <View
            android:id="@+id/block5"
            android:background="@color/grey"
            android:layout_above="@id/block4"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_width="40dp"
            android:layout_height="30dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:id="@+id/linearLayout1"
            android:weightSum="3"
            android:focusable="auto">
        <View
                android:id="@+id/frame1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="auto"
                android:onClick="main"
                android:layout_weight="1"/>
        <View
                android:id="@+id/frame2"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:clickable="true"
                android:focusable="auto"
                android:onClick="main"
                android:layout_height="match_parent"/>
        <View
                android:id="@+id/frame3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="auto"
                android:onClick="main"
                android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>